<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_frag_start_main">

    <LinearLayout
        style="@style/ll_base_vertical"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout style="@style/ll_secondary_vert">

            <LinearLayout
                android:id="@+id/calendar_button"
                style="@style/ll_third_horizontal">

                <ImageView
                    android:id="@+id/calendar_button_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/calendar" />

                <TextView
                    android:id="@+id/calendar_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/calendar_button_text"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chart_button"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/background_with_shadow"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chart_button_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/piechart" />

                <TextView
                    android:id="@+id/chart_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/chart_button_text"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/quiz_button"
                style="@style/ll_third_horizontal">

                <ImageView
                    android:id="@+id/quiz_button_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/quiz_logo" />

                <TextView
                    android:id="@+id/quiz_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/quiz_button_text"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/last_result_button"
                style="@style/ll_third_horizontal">

                <ImageView
                    android:id="@+id/last_result_button_image"
                    android:src="@drawable/mostly_cloudy_recovered"
                    style="@style/iv_logo_center" />

                <TextView
                    android:id="@+id/last_result_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/last_result_button_text"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
